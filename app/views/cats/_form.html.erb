<% form_action = (cat.persisted? ? "/cats/#{cat.id}" : "/cats/" ) %>
<% hidden_input = (cat.persisted? ? (type="hidden" name="_method" value="PATCH").to_s : nil ) %>

<form action="<%=form_action%>" method="POST">
  <input <%=hidden_input %>>

  <label for="cat_name">Cat name:</label>
  <input type="text" name="cat[name]" value="<%=cat.name%>">
  <br>

  <input type="radio"
         name="cat[sex]"
         id="cat_sex_female"
         <%=cat.sex == "F" ? "checked" : "unchecked" %>
         value="F">
  <label for="cat_sex_female">Female</label>

  <input type="radio"
         name="cat[sex]"
         id="cat_sex_male"
         <%=cat.sex == "M" ? "checked" : "unchecked" %>
         value="M">
  <label for="cat_sex_male">Male</label>
  <br>

  <label for="cat_color">Cat Color:</label>
  <select name="cat[color]" id="cat_color">
    <option></option>
    <option value="brown" <%="selected" if cat.color == "brown"%> >Brown</option>
    <option value="orange" <%="selected" if cat.color == "orange"%> >Orange</option>
    <option value="black" <%="selected" if cat.color == "black"%> >Black</option>
    <option value="white" <%="selected" if cat.color == "white"%>>White</option>
  </select>
  <br>

  <label for="cat_birth_date">Cat Birth Date:</label>
  <input type="date" name="cat[birth_date]" id="cat_birth_date" value="<%=cat.birth_date%>">
  <br>

  <label for="cat_description">Cat Description:</label>
  <textarea name="cat[description]" id="cat_description"  value=""><%=cat.description%></textarea>
  <br>

  <button>Submit</button>
</form>
