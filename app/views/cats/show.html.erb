<h1><%= @cat.name.upcase%></h1>

<table>
  <tr>
    <th>Birth Year: </th>
    <td> <%=@cat.birth_date %></td>
  </tr>
  <tr>
    <th>Color: </th>
    <td> <%=@cat.color %></td>
  </tr>
  <tr>
    <th>Sex: </th>
    <td> <%=@cat.sex %></td>
  </tr>
  <tr>
    <th>Description: </th>
    <td> <%=@cat.description ||= "A lovely cat" %></td>
  </tr>
</table>
<br>

<strong><u>  Rental Requests</strong></u>
<%@cat.rental_requests.each do |rental|%>

  <table>
    <tr>
      <th>Start Date:</th>
      <td> <%= rental.start_date %></td>
    </tr>
    <tr>
      <th>End Date:</th>
      <td> <%= rental.end_date %></td>
    </tr>
    <br>
    <tr>
    </tr>
  </table>
<%end%>
